@import "nib"

.form-horizontal legend
    text-align left
    text-indent 5%

form
    .form-control
        padding 8px 12px

    span.help-block
        text-align left
        position absolute
        font-size 11px
        text-indent 10px

input:invalid, textarea:invalid
    box-shadow none


input
    border-radius 0

.form-control:focus
    border-color #666666
    outline 0
    box-shadow inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(102, 102, 102, .6)


.edit-in-place
    cursor pointer

    input, textarea
        display none

    &.active
        
        .representation-inactive
            display none

        input, textarea
            display block
