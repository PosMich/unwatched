@import "nib"

.member
    width 33%
    float left
    opacity 0
    animation fade-member-in 1.5s forwards
    border-radius 25px
    text-align center
    margin-top 50px
    cursor pointer

    img
        height 130px
        width 130px
        border-radius 65px
        box-shadow: 0 0 5px 5px #888;
        opacity 0.7

        &:hover
            opacity 1

    for i in (1..20)
        &:nth-child({i})
            animation-delay i*0.2s
