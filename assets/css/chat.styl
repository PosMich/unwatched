.chat
    z-index 10
    .panel
        margin-bottom 0px
        //border-radius 10px 0 0 0
        border-top 0
        border-right 0
        border-bottom 0
        border-left 1px solid rgba(120,120,120,0.5)


        .panel-heading
            border-radius 0
            border 0
            background rgba(27,27,27, 0.8)
            color white
            font-weight bold

        .badge
            opacity 1
            background-color #d9534f

            &.ng-hide-remove
                display block !important

            &.ng-hide-remove
                transition all .5s ease-in-out

            &.ng-hide
                opacity 0

        input.form-control
            height 48px



.chat-container
    fixed bottom right
    margin-bottom 0px
    z-index 10000
    width 50%
    height 100%
    box-shadow 0 0 35px #333

    .panel-body
        padding 0
        padding-bottom 90px
        height 100%

    .panel-footer
        padding 0
        height 44px

    .panel-heading
        text-align left
        padding 10px 15px


    .controls
        absolute top right
        padding 10px

        i
            padding 0 2px 0 10px
            color white
            opacity 0.6
            transition opacity .25s linear
            cursor pointer

            &:hover
                opacity 1

    .message-control
        absolute bottom
        width 100%


        .control-input
            width 90%
            float left

            input
                border-radius 0

                &:focus
                    border-color: darkgrey;
                    outline: 0;
                    //-webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(0, 0, 0, 0.6);
                    //box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(100, 0, 0, 0.6);

        .control-button
            width 10%
            float left

            .btn
                width 100%
                border-radius 0
                border 1px solid #ccc

                i
                    font-size 20px
                    padding 7px

    .message-container

        overflow-y auto
        height 100%
        padding 10px

        .chat-message

            &.ng-enter, &.ng-move
                transition opacity .5s linear
                opacity 0

                &.ng-enter-active, &.ng-move-active
                    opacity 1

            .well
                float left
                max-width 80%
                text-align left
                font-size 14px
                background #f5f5f5

                b
                    padding-right 5px

                img
                    width 30px
                    height 30px
                    border-radius 5px
                    margin-right 10px

                &.own
                    float right
                    text-align left

.chat-container.compressed
    border none
    width 33%
    height 50%

    .message-container .chat-message .well
        max-width 90%
        font-size 13px

    .control-input
        width 85%

        input
            padding 10px 12px
            font-size 13px
            height 44px

    .message-control
        .control-button
            width 15%

            .btn

                i
                    font-size 20px
                    padding 5px

.chat-container.minimized
    border none
    width 33%
    height 38px

    .panel-heading
        font-size 13px
        cursor pointer

    .panel-body
        display none
    .panel-footer
        display none
