.items-container
    padding-top 40px
    padding-left 30px

    &.layout-icons

        // ff fix
        img
            width 100%
            height 100%

        .item
            width 250px
            float left
            height (250/4*3)px
            margin 30px
            //opacity 0.7
            transition opacity .3s linear
            transition background .3s linear
            position relative
            display table
            border-radius 10px
            box-shadow 0 0 35px #000
            background white

            > div
                display table-cell
                vertical-align middle
                position relative
                

            &:hover
                opacity 1

                .item-thumbnail
                    opacity 0.5
                    
                .item-infos
                    opacity 1

            .item-thumbnail
                z-index 0
                padding 10px


            .item-infos
                padding 20px
                font-size 1em
                text-align left
                opacity 0
                transition opacity .3s linear
                z-index 3
                absolute top left
                border-radius 10px
                background rgba(27,27,27, 0.9)
                width 250px
                height (250/4*3)px
                color white

                table
                    font-size 0.9em
                

                .item-controls
                    text-align center
                    position relative
                    margin auto
                    //width 175px
                    display table
                    font-size 2em
                    padding-top 10px
                    z-index 10

                    span
                        float left
                        padding 10px
                        cursor pointer
                        opacity 0.6
                        transition opacity .3s linear, width 300ms ease-in-out, height 300ms ease-in-out, font-size 300ms ease-in-out


                        &:hover
                            opacity 1
                            font-size 30px


            &.note
                .item-thumbnail
                    max-height 180px
                    overflow hidden

                    h3
                        text-align left
                        text-indent 5px
                        margin-top 5px

                    .content
                        text-align left
                        font-size 0.8em

                .item-controls
                    padding-top 0

            &.file
                .item-thumbnail
                    height 160px
                    .infos
                        float left
                        font-size 0.9em
                        padding-top 20px

                        table
                            width (248/4*3/2)px
                            text-align left

                    i
                        color rgb(150, 150, 150)
                        font-size 10em
                        float right

                .item-infos
                    .item-controls
                        padding-top 0

            &.code
                
                &:hover
                    .item-thumbnail
                        opacity 1
                    .background
                        color white
                        opacity 1

                .item-thumbnail
                    height 180px
                    overflow hidden

                    &:before
                        content ''
                        color rgb(150, 150, 150)
                        opacity 0.2

                    .content
                        absolute top left
                        padding 10px
                        width 248px
                        text-align left

                        h3
                            text-align left
                            text-indent 5px
                            margin-top 5px
                        p
                            font-size 0.9em
                            padding 10px

                            code
                                background transparent


                .item-infos
                    .item-controls
                        padding-top 0

                .item-thumbnail
                    &:before
                        color rgba(0,0,0,0.5)
                .item-infos
                    &:before
                        color rgba(255,255,255,0.1)

                .item-thumbnail, .item-infos
                    &:before
                        display block
                        absolute top right
                        font-size 10em
                        z-index 1
                        font-weight bold
                        font-style italic
                        width 100%
                        text-align right
                        padding-right 10px
                        padding-top 0px

                    &.rb:before
                        content: 'rb'
                    &.java:before
                        content: 'java'
                        font-size 5em
                        font-size 6em
                        line-height 3.1em
                    &.js:before
                        content: 'js'
                    &.py:before
                        content: 'py'
                    &.html:before
                        font-family FontAwesome
                        content: '\f13b'
                        font-weight normal
                        font-style normal
                    &.css:before
                        font-family FontAwesome
                        content: '\f13c'
                        font-weight normal
                        font-style normal

            &.shared-screen, &.shared-webcam
                
                .item-thumbnail
                    // max-height 170px

                    img
                        max-height 160px
                
                .item-infos
                    
                    .item-controls
                        padding-top 30px


    &.layout-list
        padding-left 50px
        padding-right 20px
        padding-top 60px
        
        .item
            padding 10px
            text-align left
            border-bottom 1px solid black
            transition background .3s ease-in-out, color .3s ease-in-out

            > div
                display table
                width 100%

                div
                    padding 5px
                    display table-cell
                    vertical-align middle
                    // float left

                    &.category-icon
                        font-family FontAwesome
                        font-size 22px
                        width 50px

                        &.screenshot:before
                            content: '\f1c5'
                        &.note:before
                            content: '\f0f6'
                        &.file:before
                            content: '\f016'
                        &.code:before
                            content: '\f1c9'
                        &.shared-webcam:before
                            content: '\f03d'
                        &.shared-screen:before
                            content: '\f030'

                    &.name
                        width 145px

                    &.author
                        width 210px

                    &.size
                        width 95px

                    &.created
                        width 195px

                .item-controls

                    i
                        padding-left 10px
                        padding-right 10px
                        font-size 18px
                        opacity 0.7
                        cursor pointer
                        transition opacity .3s linear, width 300ms ease-in-out, height 300ms ease-in-out, font-size 300ms ease-in-out
                        float right

                        &:hover
                            opacity 1
                            font-size 20px

            &:hover
                background rgba(27,27,27, 0.9)
                color white


    .item
        &.ng-move, &.ng-enter, &.ng-leave
            transition opacity .75s ease-in-out

        &.ng-leave.ng-leave-active, &.ng-move, &.ng-enter
            opacity 0
      

        &.ng-leave, &.ng-move.ng-move-active, &.ng-enter.ng-enter-active
            opacity 1

.span_1_of_2
    .items-container.layout-list
        padding-left 50px
        padding-right 10px
        .created
            display none