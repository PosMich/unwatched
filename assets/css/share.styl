.items-container
    padding-top 40px

    &.layout-icons

        .item-container
            width 89%
            margin 20px auto
            transition opacity .3s ease-in-out
            transition background .3s ease-in-out
            border-radius 10px
            box-shadow 0 0 35px #333
            background white
            overflow hidden

            &:hover
                .item
                    .item-thumbnail
                        opacity 0.5
                    .item-infos
                        opacity 1

            .item
                
                position relative
                border-radius 10px
                height 100%
                overflow hidden

                .item-thumbnail
                    transition opacity .3s ease-in-out
                    border-radius 10px
                    padding 10px
                    background-size 100% 
                    background-position center
                    width 100%
                    height 100%
                    background-repeat no-repeat

                    img
                        border-radius 10px
                        width 100%

                .item-infos
                    padding 10px
                    font-size 1em
                    text-align left
                    opacity 0
                    transition opacity .5s ease-in-out
                    z-index 3
                    absolute top left
                    border-radius 10px
                    background rgba(27,27,27, 0.9)
                    width 100%
                    height 100%
                    color white
                    border-radius 10px

                    table
                        td
                            padding 1px 5px
                            font-size 0.8em

                .item-controls
                    text-align center
                    absolute bottom 5px left 0
                    width 100%
                    font-size 2em
                    z-index 10

                    i
                        padding 10px
                        cursor pointer
                        opacity 0.6
                        transition opacity .3s linear, width 300ms ease-in-out, height 300ms ease-in-out, font-size 300ms ease-in-out

                        &:hover
                            opacity 1
                            font-size 30px

                &.note

                    .item-thumbnail
                        h3
                            text-align left
                            text-indent 5px

                        .content
                            text-align left
                            font-size 0.8em
                            font-style italic

                &.file
                    .item-thumbnail
                        .infos
                            table
                                float left
                                td
                                    padding 3px 10px 

                        i
                            color rgb(150, 150, 150)
                            font-size 9em
                            padding-bottom 10px
                            absolute bottom right 10px
                            opacity 0.4

                &.code
                    
                    &:hover
                        .item-thumbnail
                            opacity 1
                        .background
                            color white
                            opacity 1

                    .item-thumbnail

                        &:before
                            content ''
                            color rgb(150, 150, 150)
                            opacity 0.2

                        .content
                            absolute top left
                            padding 5px
                            text-align left
                            oveflow hidden

                            h3
                                text-align left
                                text-indent 5px
                                margin-top 5px
                            p
                                font-size 0.8em
                                padding 10px

                                code
                                    background transparent


                    .item-infos
                        .item-controls
                            padding-top 0

                    .item-thumbnail
                        &:before
                            color rgba(0,0,0,0.5)
                    .item-infos
                        &:before
                            color rgba(255,255,255,0.2)

                    .item-thumbnail, .item-infos
                        &:before
                            display block
                            absolute top right
                            font-size 8em
                            z-index 1
                            font-weight bold
                            font-style italic
                            width 100%
                            text-align right
                            padding-right 10px
                            padding-top 10px

                        &.rb:before
                            content: 'rb'
                        &.java:before
                            content: 'java'
                            font-size 4.5em
                            line-height 3.1em
                        &.js:before
                            content: 'js'
                        &.py:before
                            content: 'py'
                        &.html:before
                            font-family FontAwesome
                            content: '\f13b'
                            font-weight normal
                            font-style normal
                        &.css:before
                            font-family FontAwesome
                            content: '\f13c'
                            font-weight normal
                            font-style normal

        li
            &.ng-move, &.ng-enter, &.ng-leave
                transition opacity .75s ease-in-out

            &.ng-leave.ng-leave-active, &.ng-move, &.ng-enter
                opacity 0
          

            &.ng-leave, &.ng-move.ng-move-active, &.ng-enter.ng-enter-active
                opacity 1

    &.layout-list
        
        .item-container
            padding-top 10px
            padding-bottom 10px
            text-align left
            border-bottom 1px solid black
            transition background .3s ease-in-out, color .3s ease-in-out

            .row
                div
                    padding-top 5px

                    &.category-icon
                        font-family FontAwesome
                        font-size 22px
                        padding-left 30px
                        padding-top 0
                        text-align center

                        &.screenshot:before
                            content: '\f1c5'
                        &.note:before
                            content: '\f0f6'
                        &.file:before
                            content: '\f016'
                        &.code:before
                            content: '\f1c9'
                        &.shared-webcam:before
                            content: '\f03d'
                        &.shared-screen:before
                            content: '\f030'

                .item-controls
                    padding-top 8px

                    i
                        padding-left 10px
                        padding-right 10px
                        font-size 18px
                        opacity 0.7
                        cursor pointer
                        transition opacity .3s linear, width 300ms ease-in-out, height 300ms ease-in-out, font-size 300ms ease-in-out
                        float right

                        &:hover
                            opacity 1
                            font-size 20px

            &:hover
                background rgba(27,27,27, 0.9)
                color white


        &.item-container
            &.ng-move, &.ng-enter, &.ng-leave
                transition opacity .75s ease-in-out

            &.ng-leave.ng-leave-active, &.ng-move, &.ng-enter
                opacity 0
          

            &.ng-leave, &.ng-move.ng-move-active, &.ng-enter.ng-enter-active
                opacity 1