@require "lib/reset.css"
@require "lib/responsivegridsystem/*.css"
@require "lib/font-awesome.css"
@require "lib/bootstrap-custom/*.css"
@require "mixins.styl"
@require "animations.styl"
@require "forms.styl"
@require "members.styl"
@require "chat.styl"
@require "share.styl"
@require "controls.styl"
@require "fonts.styl"
@require "sidenav.styl"

@import "nib"

body
  //background-color #333

.no-padding
    padding 0

.no-margin
    margin 0


html
    margin: 0
    padding: 0
    padding-left:50px
    radial-gradient_( rgba(255,255,255,1), 0%, rgba(240,240,240,1), 100% )
    z-index: 0

body
    background none

html:after
    //content: ''; <-- da kann man im chrome nix mehr anklicken??
    position:fixed
    display: block;
    left: 0
    right: 0
    top: 0
    bottom: 0
    height: 100%
    width: 100%
    opacity: 0.2;
    background-image url("img/noise.png")
    z-index: 0




.view-container
    width 100%
    padding-top 20px

    .view-frame
        width 100%

    .view-frame.ng-enter
        animation 1.1s fade-in-delayed
        z-index 100

    .view-frame.ng-leave
        animation 0.5s fade-out
        z-index 99

#create-room-container
    min-width 450px
    width 50%
    max-width 700px
    float left
    margin-left 15%

.info-container
    position relative
    font-size 26px
    float left
    font-family 'Indie Flower'
    font-style italic
    font-weight 500

    .info
        border: 7px solid #c81e2b
        border-radius 200px / 110px
        padding 30px
        margin-top 50px
        left 90px
        position relative

        &:first-child
            left 130px