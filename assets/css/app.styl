@import "nib"

body
  //background-color #333

.no-padding
    padding 0

.no-margin
    margin 0


html
    margin: 0
    padding: 0
    padding-left:50px
    radial-gradient_( rgba(255,255,255,1), 0%, rgba(240,240,240,1), 100% )
    z-index: 0

body
    background none

html:after
    content: '';
    position:fixed
    display: block;
    left: 0
    right: 0
    top: 0
    bottom: 0
    height: 100%
    width: 100%
    opacity: 0.2;
    background-image url("img/noise.png")
    z-index: -2

.sidenav-container
    position fixed
    left -20px
    top 0
    height 100%
    width 35px

    background: rgb(27,27,27); /* Old browsers */
    background: -moz-linear-gradient(left,  rgba(27,27,27,1) 0%, rgba(56,56,56,1) 0%, rgba(10,10,10,1) 47%, rgba(1,1,1,1) 50%, rgba(13,13,13,1) 76%, rgba(13,13,13,1) 76%, rgba(63,63,63,1) 100%); /* FF3.6+ */
    background: -webkit-gradient(linear, left top, right top, color-stop(0%,rgba(27,27,27,1)), color-stop(0%,rgba(56,56,56,1)), color-stop(47%,rgba(10,10,10,1)), color-stop(50%,rgba(1,1,1,1)), color-stop(76%,rgba(13,13,13,1)), color-stop(76%,rgba(13,13,13,1)), color-stop(100%,rgba(63,63,63,1))); /* Chrome,Safari4+ */
    background: -webkit-linear-gradient(left,  rgba(27,27,27,1) 0%,rgba(56,56,56,1) 0%,rgba(10,10,10,1) 47%,rgba(1,1,1,1) 50%,rgba(13,13,13,1) 76%,rgba(13,13,13,1) 76%,rgba(63,63,63,1) 100%); /* Chrome10+,Safari5.1+ */
    background: -o-linear-gradient(left,  rgba(27,27,27,1) 0%,rgba(56,56,56,1) 0%,rgba(10,10,10,1) 47%,rgba(1,1,1,1) 50%,rgba(13,13,13,1) 76%,rgba(13,13,13,1) 76%,rgba(63,63,63,1) 100%); /* Opera 11.10+ */
    background: -ms-linear-gradient(left,  rgba(27,27,27,1) 0%,rgba(56,56,56,1) 0%,rgba(10,10,10,1) 47%,rgba(1,1,1,1) 50%,rgba(13,13,13,1) 76%,rgba(13,13,13,1) 76%,rgba(63,63,63,1) 100%); /* IE10+ */
    background: linear-gradient(to right,  rgba(27,27,27,1) 0%,rgba(56,56,56,1) 0%,rgba(10,10,10,1) 47%,rgba(1,1,1,1) 50%,rgba(13,13,13,1) 76%,rgba(13,13,13,1) 76%,rgba(63,63,63,1) 100%); /* W3C */
    //filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#1b1b1b', endColorstr='#3f3f3f',GradientType=1 ); /* IE6-9 */


    transition left 300ms ease-in-out
    -webkit-box-shadow: 0px 0px 19px 0px rgba(50, 50, 50, 0.75);
    -moz-box-shadow:    0px 0px 19px 0px rgba(50, 50, 50, 0.75);
    box-shadow:         0px 0px 19px 0px rgba(50, 50, 50, 0.75);
    //border-right: 2px solid rgb(0,0,255)

.sidenav-container:hover
    left 0px

.sidenav
    position relative
    display table
    left 0px
    height 100%
    width 20px


.icon-container
    display table-cell
    vertical-align middle
    //background-color rgba(0,0,255,0.1)

.icons
    position relative
    left -10px

.icon
    border-radius(25px)
    overflow hidden // <-- firefox problem
    margin 20px
    margin-right 30px
    width 50px
    height 50px
    //background gray
    //float left
    transition width 300ms ease-in-out, height 300ms ease-in-out, border-radius 300ms ease-in-out
    //background: url("img/icon_noise.png")
    /*border: 1px solid rgba(150,150,150,1)
    -webkit-box-shadow: 0px 0px 2px 0px rgba(250, 250, 250, 0.75);
    -moz-box-shadow:    0px 0px 2px 0px rgba(250, 250, 250, 0.75);
    box-shadow:         0px 0px 2px 0px rgba(250, 250, 250, 0.75);*/

    font-family: Arial, Helvetica, sans-serif;
    font-size: 14px;
    color: #ffffff;
    background: -moz-linear-gradient(
        top,
        #6b6b6b 0%,
        #454545);
    background: -webkit-gradient(
        linear, left top, left bottom,
        from(#6b6b6b),
        to(#454545));
    -moz-border-radius: 30px;
    -webkit-border-radius: 30px;
    border-radius: 30px;
    border: 1px solid #000000;
    -moz-box-shadow:
        0px 1px 3px rgba(000,000,000,0.5),
        inset 0px 0px 1px rgba(255,255,255,0.7);
    -webkit-box-shadow:
        0px 1px 3px rgba(000,000,000,0.5),
        inset 0px 0px 1px rgba(255,255,255,0.7);
    box-shadow:
        0px 1px 3px rgba(000,000,000,0.5),
        inset 0px 0px 1px rgba(255,255,255,0.7);
    text-shadow:
        0px -1px 0px rgba(000,000,000,0.4),
        0px 1px 0px rgba(255,255,255,0.3);


.icon:hover
    overflow visible // <-- firefox problem
    width 66px
    height 66px
    border-radius 33px


.icon .fa
    font-size:33px
    margin: 10px
    margin-top: 8px
    transition font-size 300ms ease-in-out

.icon .fa.fa-users
    padding-top 3px
    font-size:30px

.icon .fa.fa-file
    padding-left 4px

.icon:hover .fa
    font-size:50px

.icon:hover .fa.fa-users
    font-size:45px

