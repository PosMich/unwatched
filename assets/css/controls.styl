.heading
    fixed top left
    width 100%
    background rgba(27,27,27, 0.8)
    height 40px
    z-index 10000

    .controls
        padding 3spx

        input#searchString
            width 175px
            float right
            transition width .3s cubic-bezier(0.230, 1.000, 0.320, 1.000)
            border-radius 0

            &:focus
                width 225px

        .layout
            width 75px
            float right
            padding-top 5px

            span
                padding 5px

                &.active
                    background rgba(27,27,27, 1)
                    border-radius 5px

                &:hover
                    i
                        opacity 1

                i
                    color white
                    padding 5px
                    cursor pointer
                    opacity 0.6
                    transition opacity .2s linear

        .sorting
            float left
            padding-left 20px
            padding-top 1px
            color white
            font-size 0.9em

            div, span
                padding 7px
                float left
                margin 0 2px

            div
                cursor pointer
                position relative
                transition background .3s ease-in-out

                &.active, &:hover
                    background rgba(27,27,27, 1)
                    border-radius 5px

                &.active:after
                    font-family FontAwesome
                    content: '\f0dd'
                    padding-left 7px

            &.ascending
                .active:after
                    content: '\f0de'

            
.span_1_of_2
    .heading
        width 50%
