#clients
  .client
    position relative
    margin 10px
    opacity: 0.6

    &:hover
      opacity 1

    .client-header
      position absolute
      width 100%
      z-index 10
      padding 5px
      color white
      border none
      opacity: 0.85

      span.name
        font-size 0.8em

      span.controls
        line-height 0.8em

        i
          font-size 0.6em
          margin: 0 1px
          color: #ccc

          &:hover
            cursor: pointer
            color: white

    .client-content
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      z-index 0
      background-repeat no-repeat
      background-position center center
      background-size 100%

  &:not(.client):hover
    .panel-body
      background-color grey        

#chat

  .panel-body
    width 100%
    height 300px
    overflow-y auto

    #chat-messages
      width 100%
      position relative
      word-wrap break-word

    .chat-message
      transition all 250ms ease-in-out
      opacity 0

      &.show
        opacity 1

      span
        display inline-block
        max-width 80%

      span.own-msg
        color #3a87ad
        float right

  .panel-footer
    
    .col-xs-10

    input
      font-size 1.0em
      border none
      border-radius none
      height 34px

    .col-xs-2
      padding: 0
      &:hover
        cursor pointer
        .icon-submit-chat-message
          color #446e9b

    .icon-submit-chat-message
      color grey
      height 34px
      line-height 34px

#notes
  
  .panel-primary
    .panel-heading
      i
        color black

  .panel-heading
    i
      font-size 0.8em
      padding 6px

      &:hover
        cursor pointer
        background-color #ddd


  .panel-body
    
    .note
      margin 5px
      margin-bottom 25px
      position relative

      .heading
        font-size 0.8em
        font-weight bold
        margin-bottom 5px

      .controls
        text-align center
        position absolute
        top -11px
        opacity 0
        padding 5px
        transition all 250ms ease-in-out

        &:hover
          opacity 0.85

        i
          border 1px transparent solid
          border-radius 3px
          padding 5px

          &:not(.glyphicon-file):hover
            cursor pointer
            border 1px grey solid
            background-color #ddd
            opacity 1

        .glyphicon-file
          font-size 3.0em
