.modal-header
  h3 Login
.modal-body
  form.form-horizontal(name="signup", novalidate)
    fieldset
      .form-group(ng-class="{'has-error' : signup.email.$error.email}")
        label.col-sm-4.control-label(for='inputEmail') Email
        .col-sm-6
          input#inputEmail.form-control(type='email', ng-model="user.email", 
            name="email", placeholder='Email', required)

      .form-group(ng-class="{'has-error' : signup.password.$error.minlength}")
        label.col-sm-4.control-label(for='inputPassword') Password
        .col-sm-6
          input#inputPassword.form-control(type='password', ng-minlength="5",
            name="password", ng-model="user.password", placeholder='Password', 
            required)

      .form-group(ng-class="{'has-error' : signup.passwordConfirm.$error.minlength || signup.passwordConfirm.$error.inputMatch}")
        label.col-sm-4.control-label(for='inputConfirmPassword') Confirm Password
        .col-sm-6
          input#inputPasswordConfirm.form-control(type='password', 
            name="passwordConfirm", ng-minlength="5", input-match="inputPassword"
            ng-model="user.passwordConfirm", placeholder='Confirm Password', 
            required) 

.modal-footer
  span.
  button#submit-login.btn.btn-success(ng-click="ok()" ng-disabled="signup.$invalid") OK
  button#close-login.btn.btn-default(ng-click="cancel()") Cancel