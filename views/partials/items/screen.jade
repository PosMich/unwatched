.detail-view.shared-screen-container
    .heading.clearfix.controls
        .row
            .col-xs-12.controls.clearfix
                .brand
                    | Unwatched
                a(href="/share")
                    .back
                        i.fa.fa-arrow-left
                        span Overview
                a(ng-href="#", ng-click="save()")
                    .copy-clipboard
                        i.fa.fa-clipboard
                        span Copy infos to clipboard
                a(ng-href="#", ng-click="delete()")
                    .copy-clipboard
                        i.fa.fa-trash-o
                        span Remove

    .jumbotron
        .detail-heading
            h1
                | {{item.name}} 
        .infos-container
            .info
                b Author: 
                | {{item.author}}
            .info
                b Created: 
                | {{item.created}}
            .info
                b Category: 
                | {{item.category}}

        button.btn.btn-primary(ng-href="#", screen, ng-hide="video.show.screen")
            | Share my screen
        button.btn.btn-danger(ng-href="#", ng-show="video.show.screen", 
            ng-click="delete('screen')")
            | Stop sharing

        .video-container
            video(autoplay)
