.item(class="{{item.category}}")
    .item-thumbnail
        h3 {{item.thumbnail.title}}
        .content(ng-bind-html="item.thumbnail.content")
    .item-infos
        table
            tr
                td
                    b Name
                td {{item.name}}
            tr
                td
                    b Size
                td {{item.size}}
            tr
                td
                    b Author
                td {{item.author}}
            tr
                td
                    b Created
                td {{item.created}}
            tr
                td
                    b Edited
                td {{item.edited}}
        .item-controls.clearfix
            i.fa.fa-trash-o
            i.fa.fa-clipboard
            i.fa.fa-download
            i.fa.fa-pencil