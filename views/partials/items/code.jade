.item(class="{{item.category}}")
    .item-thumbnail(ng-class="item.extension")
        .content
            h3 {{item.name}}.{{item.extension}}
            p
                code(ng-bind-html="item.thumbnail")
    .item-infos(ng-class="item.extension")
        table
            tr
                td
                    b Name
                td {{item.name}}
                tr
                    td
                        b Extension
                    td {{item.extension}}
            tr
                td
                    b Size
                td {{item.size}}
            tr
                td
                    b Author
                td {{item.author}}
            tr
                td
                    b Created
                td {{item.created}}

        .item-controls.clearfix
            i.fa.fa-trash-o
            i.fa.fa-clipboard
            i.fa.fa-download
            i.fa.fa-pencil