.item(class="{{item.category}}")
    .item-thumbnail(style="background-image: url(images/{{item.thumbnail}})")
    .item-infos
        table
            tr
                td
                    b Name
                td {{item.name}}
            tr
                td
                    b Published
                td {{item.created}}
        .item-controls.clearfix
            i.fa.fa-trash-o
            i.fa.fa-clipboard
            i.fa.fa-eye