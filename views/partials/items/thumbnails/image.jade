.item(class="{{item.category}}")
    .item-thumbnail(style="background-image: url({{item.thumbnail}})")
    .item-infos
        table
            tr
                td
                    b Name
                td {{item.name}}
            tr
                td
                    b Size
                td {{item.size | humanReadableFileSize}}
            tr
                td
                    b Author
                td {{item.author}}
            tr
                td
                    b Created
                td {{item.created}}
        .item-controls.clearfix
            a(ng-click="delete(item.id)")
                i.fa.fa-trash-o
            a(ng-click="copyClipboard(item.id)")
                i.fa.fa-clipboard
            a(ng-href="{{item.path}}")
                i.fa.fa-download
            a(ng-href="/share/image/{{item.id}}")
                i.fa.fa-eye