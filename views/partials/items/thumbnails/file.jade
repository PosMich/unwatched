.item(class="{{item.category}}")
    .item-thumbnail(style="background-image: url({{item.thumbnail}})",
        ng-if="item.category=='image'")
    .item-thumbnail(ng-if="item.category=='file'")
        .infos
            table
                tr
                    td
                        b Name
                    td {{item.name}}
                tr
                    td
                        b Ext.
                    td {{item.extension}}
        i.fa.fa-file
    .item-infos
        table
            tr
                td
                    b Name
                td {{item.name}}
            tr
                td
                    b Size
                td {{item.size | humanReadableFileSize}}
            tr
                td
                    b Author
                td {{users[item.author].name}}
            tr
                td
                    b Created
                td {{item.created | date: 'dd.MM.yyyy - HH:mm'}}

            tr
                td
                    b Uploaded
                td {{item.uploaded | date: 'dd.MM.yyyy - HH:mm'}}

        .item-controls.clearfix
            a(ng-click="delete(item.id)", popover="Delete",
                popover-trigger="mouseenter", popover-placement="bottom",
                popover-popup-delay="750")
                i.fa.fa-trash-o
            a(ng-click="copyClipboard(item.id)", popover="Copy to clipboard",
                popover-trigger="mouseenter", popover-placement="bottom",
                popover-popup-delay="750")
                i.fa.fa-clipboard
            //- a(ng-if="item.content!=''", ng-href="{{item.path}}",
            //-     popover="Download", popover-trigger="mouseenter",
            //-     popover-placement="bottom", popover-popup-delay="750",
            //-     ng-download="'item.name'", content="file_source",
            //-     mime-type="'item.mime_type'")
            //-     i.fa.fa-download
            a(ng-href="/share/file/{{item.id}}", popover="Edit",
                popover-trigger="mouseenter", popover-placement="bottom",
                popover-popup-delay="750")
                i.fa.fa-pencil
