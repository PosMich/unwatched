.item(class="{{item.category}}")
    .item-thumbnail
        .infos
            table
                tr
                    td
                        b Name
                    td {{item.name}}
                tr
                    td
                        b Ext.
                    td {{item.extension}}
        i.fa.fa-file
    .item-infos
        table
            tr
                td
                    b Name
                td {{item.name}}
                tr
                    td
                        b Extension
                    td {{item.extension}}
            tr
                td
                    b Size
                td {{item.size | humanReadableFileSize}}
            tr
                td
                    b Author
                td {{item.author}}
            tr
                td
                    b Created
                td {{item.created}}

        .item-controls.clearfix
            a(ng-click="delete(item.id)", popover="Delete",
                popover-trigger="mouseenter", popover-placement="bottom",
                popover-popup-delay="750")
                i.fa.fa-trash-o
            a(ng-click="copyClipboard(item.id)", popover="Copy to clipboard",
                popover-trigger="mouseenter", popover-placement="bottom",
                popover-popup-delay="750")
                i.fa.fa-clipboard
            a(ng-href="{{item.path}}", popover="Download",
                popover-trigger="mouseenter", popover-placement="bottom",
                popover-popup-delay="750")
                i.fa.fa-download
