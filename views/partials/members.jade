.section.group
    .col.span_1_of_2
        .member-container
            .member(member, ng-repeat="member in members")

    .col.span_1_of_2
        .panel.panel-primary.chat-container(absolute-fill-relative-full-height,
            ng-controller="ChatCtrl")
            .panel-heading(focus-on-click="inputChatMessage") Roomname - Chat
            .panel-body(fit-chat-body-height)
                .message-container(update-scroll-position="chat.messages.length")
                    .clearfix.chat-message(
                        ng-repeat="message in chat.messages")
                        .well.well-sm(ng-class-even="'own'")
                            | <b>{{message.sender}}:</b> {{message.content}}
            .panel-footer.message-control.clearfix
                form(name="chatMessage", no-validate, 
                    ng-submit="submitChatMessage()")
                    .control-input
                        input#inputChatMessage.form-control(type="text", 
                            required, ng-model="chat.message")
                    .control-button
                        a.btn.btn-default(ng-disabled="chatMessage.$invalid", 
                            focus-on-click="input-chat-message", ng-href="#",
                            ng-click="submitChatMessage()")
                            i.fa.fa-share.text-primary
                